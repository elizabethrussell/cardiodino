<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/primary_color_heartrace">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Control your heart rate.  Hit "
        android:id="@+id/intro_1"
        android:textColor="@color/white"
        android:textSize="20sp"/>


        <TextView
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/intro_number_targets"
            android:textColor="@color/green_heartrace"
            android:textSize="36sp"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="targets as quickly as you can!"
            android:id="@+id/intro_3"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_chevron_right_36px_pink"
                android:id="@+id/intro_image"/>

            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="RACE"
                android:id="@+id/intro_4"
                android:textColor="@color/red_heartrace"
                android:textSize="36sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>